
{
    "extends": [
      "tslint-config-prettier",
      "tslint-config-airbnb",
      "tslint-react"
    ],
    "rules": {
      "indent": [
        true,
        "spaces",
        2
      ],
      "max-line-length": [
        true,
        120
      ],
      "import-name": false,
      "align": [
        true,
        "elements",
        "members",
        "parameters",
        "statements"
      ],
      "array-bracket-spacing": [
        true,
        "always"
      ],
      "ter-computed-property-spacing": [
        true,
        "always"
      ],
      "ordered-imports": [
        true,
        {
          "import-sources-order": "case-insensitive",
          "named-imports-order": "case-insensitive",
          "module-source-path": "basename",
          "grouped-imports": true,
          "groups": [
            {
              "name": "Store",
              "match": "^@Store",
              "order": 21
            },
            {
              "name": "Config",
              "match": "^@Config",
              "order": 22
            },
            {
              "name": "Utils",
              "match": "^@Utils",
              "order": 23
            },
            {
              "name": "Components",
              "match": "^@Components",
              "order": 24
            },
            {
              "name": "Navigation",
              "match": "^@Navigation",
              "order": 25
            },
            {
              "name": "Utils",
              "match": "^@Utils",
              "order": 26
            },
            {
              "name": "Styles",
              "match": "^@Styles",
              "order": 27
            },
            {
              "name": "Images",
              "match": "^@Images",
              "order": 28
            },
            {
              "name": "parent directories",
              "match": "^\\.\\.",
              "order": 30
            },
            {
              "name": "current directory",
              "match": "^\\.",
              "order": 40
            },
            {
              "name": "libraries",
              "match": ".*",
              "order": 10
            }
          ]
        }
      ],
      "jsx-no-lambda": false,
      "variable-name": [true, "ban-keywords", "check-format", "allow-pascal-case", "allow-leading-underscore"],
      "max-file-line-count": [true, 600],
      "no-trailing-whitespace": true,
      "jsx-boolean-value": false,
      "jsx-no-multiline-js": false
    }
  }
